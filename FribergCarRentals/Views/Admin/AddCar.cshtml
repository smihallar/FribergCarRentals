@model FribergCarRentals.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Lägg till bil";
}

<h2>Add Car</h2>

<form asp-action="AddCar" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricePerDay" class="control-label"></label>
        <input asp-for="PricePerDay" class="form-control" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Image Links</label>
        <div id="imageLinksContainer">
            <input name="ImageLinks" class="form-control mb-2" />
        </div>
        <button type="button" class="btn btn-secondary" onclick="addImageLink()">Add Image Link</button>
    </div>
    <div class="form-group">
        <label asp-for="IsAvailable" class="control-label"></label>
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Car" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <script>
        function addImageLink() {
            var container = document.getElementById("imageLinksContainer");
            var input = document.createElement("input");
            input.name = "ImageLinks";
            input.className = "form-control mb-2";
            container.appendChild(input);
        }
    </script>
}