@model FribergCarRentals.Models.Booking

<h2>Delete Booking</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CarId" />
    <input type="hidden" asp-for="CustomerId" />
    <input type="hidden" asp-for="IsCompleted" />

    <div>
        <label asp-for="StartDate">Start Date:</label>
        <input asp-for="StartDate" readonly />
    </div>
    <div>
        <label asp-for="EndDate">End Date:</label>
        <input asp-for="EndDate" readonly />
    </div>
    <div>
        <label asp-for="TotalCost">Total Cost:</label>
        <input asp-for="TotalCost" readonly />
    </div>
    <button type="submit">Delete</button>
</form>
