@model FribergCarRentals.Models.Booking

<h2>Radera bokning</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CarId" />
    <input type="hidden" asp-for="CustomerId" />
    <input type="hidden" asp-for="IsCompleted" />

    <div>
        <label>Startdatum:</label>
        <span>@Model.StartDate.ToShortDateString()</span>
    </div>
    <div>
        <label>Slutdatum:</label>
        <span>@Model.EndDate.ToShortDateString()</span>
    </div>
    <div>
        <label>Totalkostnad:</label>
        <span>@Model.TotalCost.ToString("C")</span>
    </div>
    <button type="submit" class="btn btn-danger">Radera</button>
</form>
